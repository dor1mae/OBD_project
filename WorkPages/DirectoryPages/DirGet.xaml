<Page x:Class="OBD.WorkPages.DirectoryPages.DirGet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OBD.WorkPages.DirectoryPages"
      mc:Ignorable="d"
      Title="DirGet" Height="450" Width="650">

    <Grid Background="White">
        <Label Content="Просмотр экспонатов" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="304" Height="65" RenderTransformOrigin="0.672,0.534" FontFamily="Yu Gothic UI Semibold" FontSize="24"/>
        <DataGrid x:Name="Table" d:ItemsSource="{d:SampleData ItemCount=2}" FontFamily="Yu Gothic UI Semibold" Margin="10,75,10,48" IsReadOnly="True"/>
        <Button x:Name="printDirectory" HorizontalAlignment="Left" Margin="500,406,0,0" VerticalAlignment="Top" Height="34" Width="140" Background="#FFA5E8AE" Content="Подготовить отчет" FontFamily="Yu Gothic UI Semibold" Click="printDirectory_Click"/>

    </Grid>
</Page>
